#!/usr/bin/sh

# This script will compile or run another finishing operation on a document.

file=$(readlink -f "$1")
dir=${file%/*}
filename="${file%.*}"
ext="${file##*.}"

cd "$dir" || exit

case "$ext" in
    c) gcc -ansi -pedantic -Wall -Wextra -Werror "$file" -o "$filename" && "$filename";;
    py) python "$file";;
esac
