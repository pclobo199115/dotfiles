#!/bin/sh

# This script will open or change directories depending on the input.

file=$(readlink -f "$1")
ext="${file##*.}"

open_file() {
    case "$ext" in
        pdf) zathura "$file";;
        jpg|png) sxiv "$file";;
        py|c|*) $EDITOR "$file";;
    esac
}

[ -f "${file}" ] && open_file || cd "$file" && $SHELL
